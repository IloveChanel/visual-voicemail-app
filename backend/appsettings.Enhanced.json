{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=VisualVoicemailPro;Trusted_Connection=true;MultipleActiveResultSets=true",
    "ProductionConnection": "Data Source=your-sql-server;Initial Catalog=VisualVoicemailPro;Integrated Security=true;TrustServerCertificate=true"
  },
  
  "JWT": {
    "SecretKey": "YourSuperSecretJWTKeyThatIsAtLeast32CharactersLong!@#$%",
    "Issuer": "VisualVoicemailPro",
    "Audience": "VisualVoicemailProUsers",
    "ExpirationHours": 24
  },
  
  "Stripe": {
    "SecretKey": "sk_test_your_stripe_secret_key_here",
    "PublishableKey": "pk_test_your_stripe_publishable_key_here",
    "WebhookSecret": "whsec_your_webhook_secret_here",
    "PriceIds": {
      "Pro": "price_your_pro_price_id",
      "Business": "price_your_business_price_id"
    }
  },
  
  "GoogleCloud": {
    "ProjectId": "your-google-cloud-project-id",
    "CredentialsPath": "path/to/your/service-account-key.json"
  },
  
  "Features": {
    "EnableCoupons": true,
    "EnableWhitelist": true,
    "EnableTrials": true,
    "MaxFreeVoicemails": 10,
    "ProMonthlyPrice": 3.49,
    "BusinessMonthlyPrice": 9.99
  },
  
  "Admin": {
    "DefaultAdminEmail": "admin@visualvoicemail.pro",
    "RequireAdminApproval": false,
    "MaxCouponUsagePerUser": 1
  },
  
  "Security": {
    "RequireHttps": false,
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 100,
    "EnableApiKeyAuth": false
  },
  
  "Translation": {
    "DefaultSourceLanguage": "auto",
    "DefaultTargetLanguage": "en",
    "PreferredProvider": "GoogleTranslate",
    "EnableTranslationMemory": true,
    "EnableFallbackProviders": true,
    "MaxRetryAttempts": 3,
    "RequestTimeout": "00:00:30",
    "EnableCaching": true,
    "CacheExpiration": "24:00:00",
    "MaxCharactersPerRequest": 5000,
    "MaxBatchSize": 100,
    "Providers": {
      "GoogleTranslate": {
        "ApiKey": "your_google_translate_api_key_here",
        "IsEnabled": true,
        "Priority": 1,
        "CostPerCharacter": 0.000020,
        "RateLimitPerMinute": 1000
      },
      "DeepL": {
        "ApiKey": "your_deepl_api_key_here",
        "Endpoint": "https://api-free.deepl.com/v2",
        "IsEnabled": true,
        "Priority": 2,
        "CostPerCharacter": 0.000020,
        "RateLimitPerMinute": 500
      },
      "MicrosoftTranslator": {
        "ApiKey": "your_microsoft_translator_key_here",
        "Region": "your_azure_region",
        "IsEnabled": true,
        "Priority": 3,
        "CostPerCharacter": 0.000010,
        "RateLimitPerMinute": 2000
      }
    }
  },
  
  "Localization": {
    "DefaultLanguage": "en",
    "SupportedLanguages": ["en", "es", "fr", "de", "it", "pt", "zh", "ja", "ko", "ar", "ru", "hi"],
    "EnableAutoDetection": true,
    "CacheExpiration": "02:00:00",
    "FallbackToEnglish": true
  }
}