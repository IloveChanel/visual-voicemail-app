<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VisualVoicemailPro"
             x:Class="VisualVoicemailPro.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Visual Voicemail Pro Brand Colors -->
            <Color x:Key="Primary">#4F46E5</Color>
            <Color x:Key="PrimaryDark">#3730A3</Color>
            <Color x:Key="Accent">#7C3AED</Color>
            <Color x:Key="Success">#10B981</Color>
            <Color x:Key="Warning">#F59E0B</Color>
            <Color x:Key="Error">#EF4444</Color>
            <Color x:Key="Spam">#DC2626</Color>
            
            <!-- Text Colors -->
            <Color x:Key="TextPrimary">#1F2937</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="TextMuted">#9CA3AF</Color>
            
            <!-- Background Colors -->
            <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
            <Color x:Key="BackgroundSecondary">#F9FAFB</Color>
            <Color x:Key="BackgroundCard">#FFFFFF</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>